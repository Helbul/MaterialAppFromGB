<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaterialAppFromGB" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="themeColorPrimary">@color/colorPrimary</item>

        <item name="bottomAppBarStyle">@style/MyStyleBottomAppBar</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>

        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.MaterialAppFromGB" parent="Base.Theme.MaterialAppFromGB" />

    <style name="MyStyleBottomAppBar" parent="@style/Widget.Material3.BottomAppBar">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="MyStyleFloatingActionButton" parent="@style/Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>


    <style name="IndigoTheme" parent="Theme.MaterialAppFromGB">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryVariant">@color/indigo_dark</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="themeColorPrimary">@color/teal_700</item>
        <item name="bottomAppBarStyle">@style/MyStyleBottomAppBar</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
    </style>

    <style name="PinkTheme" parent="Theme.MaterialAppFromGB">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/pink_light</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
        <item name="themeColorPrimary">@color/pink</item>
        <item name="bottomAppBarStyle">@style/MyStyleBottomAppBar</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
    </style>

    <style name="Splash" parent="IndigoTheme">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

</resources>